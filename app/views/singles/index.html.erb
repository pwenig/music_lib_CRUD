
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Single Title</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @singles.each do |single| %>
          <tr>
            <td><%= single.title %></td>
            <td><%= link_to 'Edit', '', class: 'btn btn-primary' %> <%= link_to 'Delete', '', method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-primary' %></td>
          </tr>
        <% end  %>
        </tbody>
      </table>
    </div>
  </div>




</div>
