<h1>Add Artist</h1>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <div class="form-group">
        <%= form_for(@artist, url: artists_path) do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="field">
            <%= f.label :name, 'Name', class:"col-md-4 control-label" %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.submit 'Save Artist', class: "btn btn-default btn-primary" %>
          </div>
        <% end %>
      </div>

    </div>

  </div>
</div>