
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">Album Title</th>
          <th scope="col">Artist Name</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
          <% @albums.each do |album| %>
          <tr>
            <td><%= link_to album.title, album_path(album) %></td>
            <td><%= album.artist.name %></td>
            <td><%= link_to 'Edit', edit_album_path(album), class: 'btn btn-primary' %> <%= link_to 'Delete', album_path(album), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-primary' %></td>

          </tr>
          <% end  %>
        </tbody>
      </table>
        <%= link_to 'Add Album', new_album_path, class: 'btn btn-primary' %>  <%= link_to 'Add Artist', new_artist_path, class: 'btn btn-primary' %>
    </div>
  </div>




</div>
